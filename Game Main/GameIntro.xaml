<Window x:Class="Game_Main.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Main"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="300">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="270" VerticalAlignment="Top" Width="292" Background="Black">

            <Image x:Name="intro" Source="Images\introbkg.jpg" Height="181" Canvas.Left="34" Canvas.Top="22" Width="216" Stretch="Fill"/>
            <TextBox x:Name="tbName" Height="25" Canvas.Left="75" TextWrapping="Wrap" Canvas.Top="187" Width="136" />
            <Label x:Name="lblName" Content="ENTER NAME" Background="Black" Foreground="LightBlue" Canvas.Left="75" Canvas.Top="162" Height="25" Width="136" Grid.IsSharedSizeScope="True" IsEnabled="False" RenderTransformOrigin="0.5,0.5" FontFamily="Showcard Gothic"/>
            <Button x:Name="btStart" Content="Start" Background="Black" Foreground="LightBlue" Canvas.Left="102" Canvas.Top="226" Width="75" Click="btStart_Click"/>
            <Label x:Name="label" Content="Label" Background="Black" Canvas.Left="75" Canvas.Top="131" Width="136"/>
        </Canvas>

    </Grid>
</Window>
